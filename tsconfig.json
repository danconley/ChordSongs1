{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  "skipLibCheck": true,
  "strict": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"]
    }
  },
  "include": ["lib/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
